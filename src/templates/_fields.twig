{% macro textField(name, value, inputSettings, fieldSettings) %}
	{% import "_includes/forms" as forms %}
	{% set input %}
		{{ forms.textField({
			id: 		name,
			name: 		name,
            value: 		value,
		}|merge(inputSettings)) }}
	{% endset %}

	{{ forms.field({
        id: name,
		required: 	false,
	}|merge(fieldSettings), input) }}
{% endmacro %}


{% macro selectField(name, value, inputSettings, fieldSettings) %}

    {% import "_includes/forms" as forms %}
    {% set input %}
        {{ forms.selectField({
            id: name,
            name: name,
            value: value ? value : inputSettings['default'],
            options: inputSettings['options'],
            class: inputSettings['class'],
        }) }}
    {% endset %}

    {{ forms.field({
        id: name,
    }|merge(fieldSettings), input) }}

{% endmacro %}
